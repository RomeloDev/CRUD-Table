                android:layout_height="wrap_content"
                android:padding="4dp"
                android:stretchColumns="1">

                <!-- Table Header Row -->
                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="UserID"
                        android:textStyle="bold" />

                    <TextView
